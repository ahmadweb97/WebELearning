@using Microsoft.AspNetCore.Identity
@using WebELearning.Data;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result?.FirstName @UserManager.GetUserAsync(User).Result?.LastName !</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-outline-info ">
                    <i class="fas fa-sign-out-alt mr-1 text-danger"></i>
                    Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" data-target="#UserRegistrationModal" data-toggle="modal"
            asp-page="/Account/Register"><i class="fas fa-user mr-1 text-danger"></i> Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" data-target="#UserLoginModal" data-toggle="modal"
           asp-page="/Account/Login"><i class="fas fa-sign-in-alt mr-1 text-danger"></i>Login</a>
        </li>
    }
</ul>
