@model int

<a asp-action="Edit" asp-route-id="@Model" class="text-info mr-2" title="Edit"><i class="fa fa-edit"></i></a>
<a asp-action="Details" asp-route-id="@Model" class="text-dark mr-2" title="Show Details"><i class="fa fa-eye"></i></a>
<a asp-action="Delete" asp-route-id="@Model" class="text-danger mr-2" title="Delete"><i class="fa fa-trash"></i></a>
